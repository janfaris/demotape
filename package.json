{
  "name": "demotape",
  "version": "0.4.0",
  "description": "Record polished demo videos of your web app from a JSON config",
  "type": "module",
  "bin": {
    "demotape": "./bin/demotape.mjs"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "bin",
    "configs"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "demo",
    "video",
    "recording",
    "playwright",
    "marketing",
    "screenshot",
    "cli",
    "ffmpeg",
    "automation"
  ],
  "author": "Jan Faris",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/janfaris/demotape"
  },
  "homepage": "https://github.com/janfaris/demotape",
  "bugs": {
    "url": "https://github.com/janfaris/demotape/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "zod": "^3.22.0"
  },
  "peerDependencies": {
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "playwright": "^1.40.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
